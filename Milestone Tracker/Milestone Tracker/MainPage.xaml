<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:control="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             x:Class="Milestone_Tracker.MainPage">


    <StackLayout Spacing="0">
        <ListView x:Name="listView" IsGroupingEnabled="True" HasUnevenRows="True" SeparatorVisibility="None">

            <!-- List Category -->
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label HeightRequest="35" Text="{Binding Category}" TextColor="gray" FontAttributes="Bold" Padding="10, 10, 0, 5"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <!-- List items -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="0" Padding="5, 2">
                            
                            <!-- Current Stage -->
                            <Grid WidthRequest="60" MinimumWidthRequest="60">
                                <yummy:PancakeView BackgroundGradientEndPoint="0,1" BackgroundGradientStartPoint="1,0" CornerRadius="10, 0 ,10 ,0">
                                    <yummy:PancakeView.BackgroundGradientStops>
                                        <yummy:GradientStop Color="{Binding StageBGD}" Offset="0" />
                                        <yummy:GradientStop Color="{Binding StageBGL}" Offset="0.25" />
                                        <yummy:GradientStop Color="{Binding StageBGD}" Offset="0.5" />
                                        <yummy:GradientStop Color="{Binding StageBGL}" Offset="0.75" />
                                        <yummy:GradientStop Color="{Binding StageBGD}" Offset="1" />
                                    </yummy:PancakeView.BackgroundGradientStops>
                                </yummy:PancakeView>
                                <StackLayout VerticalOptions="Center" Padding="0, 4, 0, 8">
                                    <Label FontSize="15" Text="Stage" TextColor="WhiteSmoke" HorizontalOptions="Center"/>
                                    <Label FontSize="40" FontAttributes="Bold" Text="{Binding CurrentCheckpoint}" TextColor="White" HorizontalOptions="Center"/>
                                </StackLayout>
                            </Grid>

                            <!-- Name, Progress -->
                            <Grid  HorizontalOptions="FillAndExpand">
                                <yummy:PancakeView  BackgroundColor="#000000" Opacity="0.3" CornerRadius="0, 10, 0, 10"/>

                                <Grid Padding="10 ,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.4*"/>
                                        <RowDefinition Height="0.4*"/>
                                        <RowDefinition Height="0.3*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="0.3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  HorizontalOptions="Start" Grid.RowSpan="2" Grid.Row="0" Grid.Column="0" FontSize="15" Text="{Binding Name}" TextColor="White"/>
                                    <control:ProgressRing RingThickness="12" VerticalOptions="End" Grid.RowSpan="3" Grid.Column="1" Progress="{Binding Progress}" RingProgressColor="Gold" Rotation="180" />
                                    <Label HorizontalOptions="End" Grid.Row="2" Grid.Column="0" FontSize="13" Text="{Binding ProgressRatio}" TextColor="WhiteSmoke"/>
                                </Grid>
                            </Grid>
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
