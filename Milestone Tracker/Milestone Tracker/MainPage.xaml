<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:local="clr-namespace:Milestone_Tracker.Models"
             x:Class="Milestone_Tracker.MainPage">


    <StackLayout Spacing="0">
        <ListView x:Name="listView" IsGroupingEnabled="True" HasUnevenRows="True" SeparatorVisibility="None">

            <!-- List Category -->
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label HeightRequest="35" Text="{Binding Category}" TextColor="gray" FontAttributes="Bold" Padding="10, 10, 0, 5"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <!-- List items -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand" Padding="5, 2" ColumnSpacing="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*" />
                                <ColumnDefinition Width="0.005*" />
                                <ColumnDefinition Width="0.795*" />
                            </Grid.ColumnDefinitions>

                            <!-- Background -->
                            <yummy:PancakeView Grid.ColumnSpan="3" BackgroundGradientEndPoint="0,1" BackgroundGradientStartPoint="1,0" CornerRadius="10">
                                <yummy:PancakeView.BackgroundGradientStops>
                                    <yummy:GradientStop Color="{Binding StageBGL}" Offset="0.1" />
                                    <yummy:GradientStop Color="{Binding StageBGD}" Offset="0.3" />
                                    <yummy:GradientStop Color="{Binding StageBGL}" Offset="0.5" />
                                    <yummy:GradientStop Color="{Binding StageBGD}" Offset="0.7" />
                                    <yummy:GradientStop Color="{Binding StageBGL}" Offset="0.9" />
                                </yummy:PancakeView.BackgroundGradientStops>
                            </yummy:PancakeView>

                            <!-- Current Stage -->
                            <StackLayout Grid.Column="0" VerticalOptions="Center" Padding="0, 4, 0, 8">
                                <Label FontSize="15" Text="Stage" TextColor="WhiteSmoke" HorizontalOptions="Center"/>
                                <Label FontSize="40" FontAttributes="Bold" Text="{Binding CurrentCheckpoint}" TextColor="White" HorizontalOptions="Center"/>
                            </StackLayout>

                            <Label Grid.Column="1" BackgroundColor="#000000" Opacity="0.4" />


                            <!-- Name, Progress -->
                            <Grid Grid.Column="2"  HorizontalOptions="FillAndExpand" Padding="15 ,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.4*"/>
                                    <RowDefinition Height="0.4*"/>
                                    <RowDefinition Height="0.3*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="0.3*"/>
                                </Grid.ColumnDefinitions>
                                <local:CustomLabel  HorizontalOptions="Start" Grid.RowSpan="2" Grid.Row="0" Grid.Column="0" FontSize="17" Text="{Binding Name}" TextColor="White"/>
                                <control:ProgressRing RingThickness="12" VerticalOptions="End" Grid.RowSpan="3" Grid.Column="1" Progress="{Binding Progress}" RingProgressColor="Gold" Rotation="180" />
                                <Label HorizontalOptions="End" Grid.Row="2" Grid.Column="0" FontSize="15" Text="{Binding ProgressRatio}" TextColor="WhiteSmoke"/>
                            </Grid>

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
