<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Milestone_Tracker.Views.Login.LoginPage">
    <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
        <Entry Placeholder="Email" Text="{Binding Username}"></Entry>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"></Entry>
        <Button Margin="30,10" CornerRadius="10" BackgroundColor="Black" TextColor="White" Text="Login" Command="{Binding Login}" />
    </StackLayout>
</ContentPage>